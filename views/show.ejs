<%- include('partials/header'); %>
<h1 style="text-align: center;">User Profile</h1>
<hr style="width: 30%;">
<h2 style="text-align: center;">Your orders</h2>
<%order.forEach(function(order){%>
   <div class="row">
       <div class="container">
           <div class="col-md-12 col-lg-12"style="padding: 10px;">
            <div class="panel panel-default" style="width: 70%;margin: 0 auto; ">
                <div class="panel-body">
                    <table style="border: 1px solid #f5f5f5;width:100%;border-radius: 20%;">
<%order.items.forEach(function(item){%>
<tr style="border: 1px solid #f5f5f5;padding: 20px;border-radius: 20%;">
    <td style="padding: 20px;">
      <%= item.item.title %>  
      <div style="display: inline;float: right;">
        <span class="badge badge-light"><%= item.qnty%></span>
      </div>
   
       

    </td>
    </tr>
    <%})%>
</table>

                </div>
                <div class="panel-footer text-center"><strong>Total Price: $<%=order.cart.totalprice%></strong>
                    
                    </div>
              </div>
             
  

           </div>

       </div>

   </div>
   
<%});%>


  
  
<%- include('partials/footer'); %>